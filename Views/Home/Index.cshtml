﻿
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f4f4;
            color: #333;
        }

        .hero-section {
            background-image: url('@Url.Content("https://e7nmeemxs8h.exactdn.com/wp-content/uploads/2024/07/haris-kings-road-header.jpg?lossy=1&ssl=1")');
            background-size: cover;
            background-position: center;
            height: 80vh;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .hero-text {
            text-align: center;
            font-size: 3rem;
        }

        .services-section {
            padding: 50px 0;
            background-color: #fff;
        }

        .service-card {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s;
        }

            .service-card:hover {
                transform: translateY(-10px);
            }

            .service-card img {
                width: 100%;
                height: 200px;
                object-fit: cover;
            }

        .service-card-body {
            padding: 20px;
        }

        .contact-section {
            background-color: #222;
            color: white;
            padding: 40px 0;
        }

            .contact-section .btn-primary {
                background-color: #ff6219;
                border-color: #ff6219;
            }
    </style>
</head>
<body>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-text">
            <h1>Welcome to Our Hair Salon</h1>
            <p>Your beauty, our passion!</p>
        </div>
    </section>

    <!-- Services Section -->
    <section class="services-section">
        <div class="container">
            <h2 class="text-center mb-5">Our Services</h2>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="service-card">
                        <img src="@Url.Content("https://img.freepik.com/premium-photo/fresh-style-close-up-client-master-barber-stylist-getting-care-new-look-hairstyle-professional-occupation-male-beauty-self-care-concept-soft-colors-focus-vintage_155003-45363.jpg")" alt="Haircut"> <!-- MVC image path -->
                        <div class="service-card-body">
                            <h4>Haircut</h4>
                            <p>Experience a stylish new look with our professional haircut services.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="service-card">
                        <img src="@Url.Content("https://www.salon833.com/static/43d03a610daca60d61d488c23fb173c1/05d84/female-hairdresser-making-hairstyle-blonde-wo_a8gEyzX.png")" alt="Hairstyling">
                        <div class="service-card-body">
                            <h4>Hairstyling</h4>
                            <p>Let our experts create a stunning hairstyle for any occasion.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="service-card">
                        <img src="@Url.Content("https://creatorsmag.com/cdn/shop/articles/55_Ideas_for_Light_Brown_Hair_with_Highlights_and_Lowlights_lightbrownhair_lightbrownhairideas_lightbrown___digitalhiten_720x.jpg?v=1561400674")" alt="Hair Coloring">
                        <div class="service-card-body">
                            <h4>Hair Coloring</h4>
                            <p>Transform your look with vibrant hair coloring services.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="contact-section">
        <div class="container text-center">
            <h2>Get in Touch</h2>
            <p>Book an appointment with us and let us pamper you!</p>
            <div style="display: flex; justify-content: center; align-items: center;">
                <a class="nav-link btn btn-warning" href="@Url.Action("Appointment", "Home")" style="color: white; font-weight: bold; padding: 10px 20px; border-radius: 5px;">APPOINTMENT</a>
            </div>

        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>