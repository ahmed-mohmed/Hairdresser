
@{
    ViewData["Title"] = "Book an Appointment";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Background Image */
        body {
            background-image: url('https://png.pngtree.com/background/20230612/original/pngtree-barbershop-with-chairs-in-traditional-styles-and-mirrors-in-front-picture-image_3372710.jpg');
            background-size: cover;
            background-position: center;
            color: white;
        }
        /* Card Styling */
        .card {
            background-color: rgba(0, 0, 0, 0.7); /* Transparent background */
            border-radius: 10px;
        }
    </style>
</head>
<body>

    <!-- Main Content -->
    <div class="container my-5">
        <h2 class="text-center mb-4">@ViewData["Title"]</h2>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <form method="post" asp-action="BookAppointment">
                            <!-- Customer Name -->
                            <div class="mb-3">
                                <label for="customerName" class="form-label">Your Name</label>
                                <input type="text" id="customerName" name="CustomerName" class="form-control" required placeholder="Enter your full name" />
                            </div>

                            <!-- Appointment Date -->
                            <div class="mb-3">
                                <label for="appointmentDate" class="form-label">Date</label>
                                <input type="date" id="appointmentDate" name="AppointmentDate" class="form-control" required />
                            </div>

                            <!-- Appointment Time -->
                            <div class="mb-3">
                                <label for="appointmentTime" class="form-label">Time</label>
                                <input type="time" id="appointmentTime" name="AppointmentTime" class="form-control" required />
                            </div>

                            <!-- Submit Button -->
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success btn-lg">Book Appointment</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Success Alert (Optional) -->
        @if (ViewData["Success"] != null)
        {
            <div class="alert alert-success mt-4" role="alert">
                @ViewData["Success"]
            </div>
        }
    </div>


    <!-- Bootstrap JS & Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>
