﻿﻿
@{
    ViewData["Title"] = "Home";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Barber Shop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
        }

        .hero-section {
            height: 100vh;
            background-image: url('https://via.placeholder.com/1920x1080');
            background-size: cover;
            background-position: center;
            color: white;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

            .hero-section .overlay {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5);
            }

        .about-us-section .position-relative img {
            width: 100%;
            border-radius: 10px;
        }

        .services-section img {
            height: 200px;
            object-fit: cover;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <!-- Hero Section -->
    <section class="hero-section text-light">
        <div class="overlay"></div>
        <div class="container position-relative">
            <h1 class="display-4 fw-bold">Modern Barber Shop in the City</h1>
            <p class="lead">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
            <a href="#about" class="btn btn-warning btn-lg text-white">Appointment</a>
        </div>
    </section>

    <!-- About Us Section -->
    <section id="about" class="about-us-section py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 position-relative">
                    <img src="https://via.placeholder.com/500x600" alt="Barber" class="mb-4">
                    <img src="https://via.placeholder.com/300x400" alt="Barber" class="position-absolute" style="top: 50%; left: 50px; transform: translateY(-50%); z-index: 10;">
                </div>
                <div class="col-md-6">
                    <h2 class="fw-bold mb-4">About Us</h2>
                    <p class="mb-3">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Risus commodo viverra maecenas accumsan lacus vel facilisis.</p>
                    <h5 class="fw-bold">Opening Hours</h5>
                    <p class="mb-4">10:00 am - 10:00 pm</p>
                    <a href="#services" class="btn btn-warning btn-lg text-white">Learn More</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="services-section py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold">Our Services</h2>
                <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
            </div>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card border-0 shadow">
                        <img src="https://via.placeholder.com/400x300" class="card-img-top" alt="Smooth Shave">
                        <div class="card-body text-center">
                            <div class="icon mb-3">
                                <img src="https://via.placeholder.com/50" alt="Icon" class="rounded-circle">
                            </div>
                            <h5 class="card-title fw-bold">Smooth Shave</h5>
                            <p class="card-text text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow">
                        <img src="https://via.placeholder.com/400x300" class="card-img-top" alt="Beard Triming">
                        <div class="card-body text-center">
                            <div class="icon mb-3">
                                <img src="https://via.placeholder.com/50" alt="Icon" class="rounded-circle">
                            </div>
                            <h5 class="card-title fw-bold">Beard Triming</h5>
                            <p class="card-text text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow">
                        <img src="https://via.placeholder.com/400x300" class="card-img-top" alt="Haircut Styles">
                        <div class="card-body text-center">
                            <div class="icon mb-3">
                                <img src="https://via.placeholder.com/50" alt="Icon" class="rounded-circle">
                            </div>
                            <h5 class="card-title fw-bold">Haircut Styles</h5>
                            <p class="card-text text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
