
@model Hairdresser_Website.Models.Appointment
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-4">
    <h2 class="mb-4">Delete Appointment</h2>
    <div class="alert alert-warning">
        Are you sure you want to delete this appointment?
    </div>
    <dl class="row">
        <dt class="col-sm-2">Service</dt>
        <dd class="col-sm-10">@Model.Service.Name</dd>
        <dt class="col-sm-2">Employee</dt>
        <dd class="col-sm-10">@Model.Employee.Name</dd>
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.AppointmentDate.ToString("f")</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="AppointmentId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
